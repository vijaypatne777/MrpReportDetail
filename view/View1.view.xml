<mvc:View controllerName="YY1_MAT_CONSUME_UI5.Material_Consume_13.controller.View1" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified" xmlns:m="sap.m" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:vm="sap.ui.comp.variants"
	xmlns:core="sap.ui.core" xmlns:fo="sap.ui.layout.form" xmlns:l="sap.ui.layout" displayBlock=" true">
	<m:App id="app">
		<m:pages>
			<m:Page title="{i18n>title}">
				<l:VerticalLayout class="sapUiContentPadding" width="100%">
					<fb:FilterBar reset="onReset" class="sapUiSmallMarginBottom" search="onSearch" showRestoreButton="true" showClearButton="true">
						<fb:filterGroupItems>
							<fb:FilterGroupItem id="idPlant" groupName="__$INTERNAL$" name="A" label="Plant" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<m:Input required="true" id="idFieldPlant" type="Text" placeholder="{i18n>Plant}"/>
								</fb:control>
							</fb:FilterGroupItem>
							<fb:FilterGroupItem id="idDate" groupName="__$INTERNAL$" name="B" label="Run Date" partOfCurrentVariant="true" visibleInFilterBar="true">
								<fb:control>
									<m:Label text="Run Date" labelFor="DP1"/>
									<m:DatePicker valueFormat="yyyy-MM-dd" displayFormat="long" id="idDatePicker" placeholder="Enter Run Date ..." change="handleChange" class="sapUiSmallMarginBottom"/>
								</fb:control>
							</fb:FilterGroupItem>
						</fb:filterGroupItems>
					</fb:FilterBar>
				</l:VerticalLayout>
				<Table id="idTable">
					<extension>
						<m:OverflowToolbar>
							<m:Title id="title" text="Material Stock and Consumption Details"/>
							<m:Button icon="sap-icon://download" press="onDataExport"/>
						</m:OverflowToolbar>
					</extension>
				</Table>
			</m:Page>
		</m:pages>
	</m:App>
</mvc:View>